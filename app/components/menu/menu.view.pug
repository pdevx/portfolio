md-sidenav.md-sidenav-left.md-whiteframe-z2(md-component-id="left", md-is-locked-open="$mdMedia('gt-sm')", layout= "column", flex="",ng-cloak="")
    md-toolbar.md-tall.md-hue-2
        .md-toolbar-tools-bottom.inset(layout='column', flex="")
    md-list
        md-item(ng-repeat='item in vm.menu', flex="")
            a(href="{{item.link}}", ng-click="vm.openLeftMenu()", aria-label="Open Left Menu")
                md-item-content(layout='row', layout-align='start center')
                    .inset
                        ng-md-icon(icon='{{item.icon}}')
                    .inset
                        | {{item.title | translate }}
        md-divider
div(layout="column", flex="")
    md-toolbar.md-whiteframe-z2.md-medium-tall(layout="row", layout-align="start center")
        md-button.menu.click-menu-open(ng-click="vm.openLeftMenu()", hide-gt-sm="", aria-label="Open Left Menu")
            ng-md-icon(icon="menu", size="48")
    md-content(flex="")
        div(ui-view="mainContent", flex="", layout="column")
    div(ui-view="buttonContent")
